<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
 
	<application>
    	<el-resolver>
    		org.springframework.web.jsf.el.SpringBeanFacesELResolver
    	</el-resolver>
  	</application>
 	
	<managed-bean>
		<managed-bean-name>customer</managed-bean-name>
		<managed-bean-class>com.mkyong.CustomerBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>customerBo</property-name>
			<property-class>com.mkyong.customer.bo.CustomerBo</property-class>
			<value>#{customerBo}</value>
		</managed-property>
	</managed-bean>
	<navigation-rule>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>home/dashboard.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			
			<from-outcome>failed</from-outcome>
			<to-view-id>login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/student/studentCentral.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>studentDetails</from-outcome>
			<to-view-id>student/studentDetails.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			
			<from-outcome>failed</from-outcome>
			<to-view-id>student/studentCentral.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
