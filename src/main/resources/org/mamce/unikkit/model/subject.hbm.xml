<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.mamce.unikkit.model.student.Subject" table="tbl_subject" 
		catalog="unikkit">
        <id name="id" type="long">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="code" type="string" not-null="true" >
            <column name="code" />
        </property>
        <property name="name" type="string" >
            <column name="name" />
        </property>
        <property name="createdDate" type="timestamp">
			<column name="created_date" />
		</property>
		<property name="updatedDate" type="timestamp">
			<column name="updated_date" />
		</property>
		<property name="updateBy" type="long">
			<column name="updated_by" />
		</property>
		
		<many-to-one name="department" class="org.mamce.unikkit.model.Department" column="department_id" cascade="all" not-null="true" />
		
		 <set name="semesters" table="tbl_sem_subject" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="subject_id" not-null="true" />
            </key>
            <many-to-many entity-name="org.mamce.unikkit.model.student.Semester">
                <column name="semester_id" not-null="true" />
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>